@model Blog.ViewModels.ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
}

 <div class="container-fluid">
          <a class="btn btn-primary" asp-action="Index" asp-area="Admin" asp-controller="User">Back</a>

     <div class="card">
         <h4 class="card-header bg-primary">
             Reset Password
         </h4>

     </div>
     <div class="card-body">
         <form  asp-controller="User" asp-action="ResetPassword" asp-area="Admin">
             <div class="mb-2">
                 <label>User Name</label>
                 <input type="text" class="form-control" asp-for="Username" disabled>
                 <span asp-validation-for="Username" class="text-danger"></span>
             </div>
             
             
             <div class="mb-2">
                 <label>New Password</label>
                 <input type="password" class="form-control" asp-for="Password">
                 <span asp-validation-for="Password" class="text-danger"></span>
             </div>
             <div class="mb-2">
                 <label>Confirm Password</label>
                 <input type="password" class="form-control" asp-for="ConfirmPassword">
                 <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
             </div>
             <div class="mb-2">
                 <button type="submit" class="btn btn-primary w-100">Reset Password</button>
             </div>
         </form>
     </div>

  </div>

