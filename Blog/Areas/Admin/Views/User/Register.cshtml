@model Blog.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Register";
}


 <div class="container-fluid">
          <a class="btn btn-primary" asp-action="Index" asp-area="Admin" asp-controller="User">Back</a>

     <div class="card">
         <h4 class="card-header bg-primary">
             Register User
         </h4>

     </div>
     <div class="card-body">
         <form  asp-controller="User" asp-action="Register" asp-area="Admin">
             <div class="mb-2">
                 <label>First Name</label>
                 <input type="text" class="form-control" asp-for="FirstName">
                 <span asp-validation-for="FirstName" class="text-danger"></span>
             </div>
             <div class="mb-2">
                 <label>Last Name</label>
                 <input type="text" class="form-control" asp-for="LastName">
                 <span asp-validation-for="LastName" class="text-danger"></span>
             </div>
             <div class="mb-2">
                 <label>User Name</label>
                 <input type="text" class="form-control" asp-for="UserName">
                 <span asp-validation-for="UserName" class="text-danger"></span>
             </div>
             <div class="mb-2">
                 <label>Email</label>
                 <input type="email" class="form-control" asp-for="Email">
                 <span asp-validation-for="Email" class="text-danger"></span>
             </div>
             <div class="mb-2">
                 <label>Password</label>
                 <input type="password" class="form-control" asp-for="Password">
                 <span asp-validation-for="Password" class="text-danger"></span>
             </div>
             <div class="mb-2">
                 <input type="checkbox" class="custom-checkbox" asp-for="IsAdmin">
                 <label>IsAdmin?</label>
                 <span asp-validation-for="IsAdmin" class="text-danger"></span>
             </div>
             <div class="mb-2">
                 <button type="submit" class="btn btn-primary w-100">Register</button>
             </div>
         </form>
     </div>

  </div>


