@model List<Blog.ViewModels.UserVM>
@{
    ViewData["Title"] = "Index";
}

 <div class="container-fluid">
     <a class="btn btn-primary" asp-action="Register" asp-area="Admin" asp-controller="User">Add User</a>
     <div class="card">
         <h4 class="card-header bg-primary">
             List of Users
         </h4>

     </div>
     <div class="card-body">
         <table class="table table-striped table-hover" id="myTable">
             <thead>
                 <tr>
                     <th>First Name</th>
                     <th>last Name</th>
                     <th>UserName</th>
                     <th>Email</th>
                     <th>Role</th>
                     <th>Actions</th>
                 </tr>
             </thead>
             <tbody>
                @foreach(var user in Model)
                {
                    <tr>
                            <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td>
                            <a class="btn btn-secondary" asp-action="ResetPassword" asp-controller="User" asp-route-id="@user.Id">Forget Password</a>
                        </td>

                    </tr>
                    
                }
            </tbody>
         </table>
     </div>

  </div>
